# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database
DATABASE_URL=postgresql://webops_user:your_password@localhost:5432/webops_db

# Celery / Redis Configuration
# SECURITY: Redis should ALWAYS require a password (requirepass in redis.conf)
# Format: redis://:password@host:port/db
# Generate password: openssl rand -base64 32
REDIS_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@localhost:6379/0
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@localhost:6379/1

# Security
# IMPORTANT: Generate a unique encryption key for your environment
# Run: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# DO NOT use the same key across multiple environments
ENCRYPTION_KEY=CHANGE_ME_GENERATE_NEW_KEY_SEE_COMMENT_ABOVE

# GitHub OAuth Integration (Optional - for private repository access)
# Create OAuth App at: https://github.com/settings/developers
GITHUB_OAUTH_CLIENT_ID=
GITHUB_OAUTH_CLIENT_SECRET=
GITHUB_OAUTH_REDIRECT_URI=http://localhost:8000/integrations/github/callback

# Legacy GitHub Token (Deprecated - use OAuth instead)
GITHUB_TOKEN=

# Email (Optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Application Settings
WEBOPS_INSTALL_PATH=/opt/webops
WEBOPS_USER=hosting
MIN_PORT=8001
MAX_PORT=9000