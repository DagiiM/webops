# AI Agent System Environment Configuration
# Copy this file to .env and customize the values

# General Configuration
AGENT_ENVIRONMENT=production
AGENT_LOG_LEVEL=INFO
AGENT_CONFIG_PATH=/app/config
AGENT_DATA_PATH=/app/data

# WebOps Control Panel Integration
WEBOPS_API_BASE_URL=http://control-panel:8000
WEBOPS_API_TOKEN=your_api_token_here
WEBOPS_WS_URL=ws://control-panel:8000

# Database Configuration
POSTGRES_HOST=postgresql
POSTGRES_PORT=5432
POSTGRES_DB=webops
POSTGRES_USER=webops
POSTGRES_PASSWORD=secure_password_here

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_here
REDIS_DB=0

# Security Configuration
SECRET_KEY=your_django_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
JWT_SECRET=your_jwt_secret_here

# Agent Settings
AGENT_ID=ai-agent-001
AGENT_NAME=WebOps AI Agent
AGENT_DESCRIPTION=Intelligent agent for WebOps platform management
AGENT_VERSION=1.0.0

# Resource Limits
MAX_MEMORY_USAGE=2GB
MAX_CPU_USAGE=100
MAX_DISK_USAGE=10GB
MAX_CONCURRENT_TASKS=10

# Memory System Configuration
MEMORY_MAX_EPISODIC=10000
MEMORY_MAX_SEMANTIC=50000
MEMORY_MAX_PROCEDURAL=5000
MEMORY_CONSOLIDATION_INTERVAL=3600

# Decision Making
DECISION_CONFIDENCE_THRESHOLD=0.7
DECISION_MAX_OPTIONS=5
DECISION_TIMEOUT=30

# Communication
COMMUNICATION_MAX_RETRIES=3
COMMUNICATION_TIMEOUT=10
COMMUNICATION_BATCH_SIZE=100

# Skills Configuration
SKILLS_MAX_CONCURRENT=5
SKILLS_TIMEOUT=300
SKILLS_RETRY_COUNT=3

# Logging and Monitoring
LOG_MAX_SIZE=100MB
LOG_RETENTION_DAYS=30
MONITORING_ENABLED=true
METRICS_ENABLED=true

# Security Features
SECURITY_AUDIT_LOGGING=true
SECURITY_RATE_LIMITING=true
SECURITY_ENCRYPTION_ENABLED=true
SECURITY_TOKEN_EXPIRY=3600

# Network Configuration
AGENT_API_PORT=8000
AGENT_WS_PORT=8001
PROXY_TRUST_REAL_IP=true

# External Integrations
GITHUB_TOKEN=your_github_token_here
HUGGINGFACE_TOKEN=your_hf_token_here

# Development Settings (only for development)
DEBUG=false
TESTING=false
PROFILE_PERFORMANCE=false

# SSL Configuration (for production)
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/agent.crt
SSL_KEY_PATH=/etc/ssl/private/agent.key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your_backup_bucket

# Notification Settings
NOTIFICATIONS_ENABLED=true
NOTIFICATION_EMAIL=admin@example.com
NOTIFICATION_WEBHOOK_URL=your_webhook_url_here